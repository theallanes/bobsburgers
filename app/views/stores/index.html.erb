<h2 class="title is-2">Store Next Door</h2>

<div class="grid">
  <% @stores.each do |store| %>
    <div class="cell">
      <div class="card">
        <div class="card-image">
          <figure class="image is-3by2">
            <img src="<%= store.image %>" alt="<%= store.store_name %>">
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to store.store_name, store, :class =>"title is-4" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<nav class="pagination is-centered" aria-label="pagination">
  <%= paginate @stores %>
</nav>

